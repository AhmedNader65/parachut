<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الاثنين"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:lineSpacingExtra="11sp"
            android:gravity="end"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardCornerRadius="1dp">

            <TextView
                android:layout_marginTop="16dp"
                android:textAlignment="center"
                android:gravity="center"
                android:id="@+id/tv_statuts"
                android:layout_width="64dp"
                android:layout_height="24dp"
                android:layout_gravity="end"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:background="@drawable/btn_green"
                android:lineSpacingExtra="9sp"
                android:text="تمت"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:textStyle="bold"
                />

            <LinearLayout
                android:layout_marginTop="13dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <TextView
                    android:layout_marginRight="16dp"
                    android:id="@+id/tv_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:gravity="end"
                    android:lineSpacingExtra="11sp"
                    android:text="الكود : 1819#"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_marginRight="16dp"
                    android:id="@+id/tv_productsNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:gravity="end"
                    android:lineSpacingExtra="11sp"
                    android:text="عدد المنتجات :( 15) منتج"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_marginRight="16dp"
                    android:id="@+id/tv_totalCost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:gravity="end"
                    android:lineSpacingExtra="11sp"
                    android:text="اجمالي التكلفة :100جنيه"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <Button
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_details"
                android:text="تفاصيل الطلب"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="@color/endGradient"
                android:lineSpacingExtra="11sp"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/btn_order_details"
                />


        </androidx.cardview.widget.CardView>

    </LinearLayout>
</LinearLayout>